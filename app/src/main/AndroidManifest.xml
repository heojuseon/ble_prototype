<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<!--  BLE 권한 설정  -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
  <!--  앱이 Android 12(API 수준 31) 이상을 타겟팅하는 경우 아래 퍼미션 선언  -->
    <!-- 앱이 블루투스를 찾는 경우(예: BLE 주변기기를 사용하려면 BLUETOOTH_SCAN 권한을 부여했는지 확인), 추후 neverForLocation 속성 사용 여부 체크 -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"/>
    <!-- 앱에서 현재 기기를 다른 블루투스에서 검색할 수 있도록 설정하는 경우 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE"/>
    <!-- 앱에서 이미 페어링된 블루투스와 통신하는 경우 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    <!-- 앱에서 블루투스 검색 결과를 사용하여 실제 위치를 얻는 경우(Android 9 이하 지원시 : ACCESS_COARSE_LOCATION) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--  (Android 10 이상) 백그라운드에서 블루투스 기기를 스캔해야 할 경우 권한 필요  -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

<!--  블루투스 클래식을 제외한 BLE 장치만 사용할 경우  -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ble"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>